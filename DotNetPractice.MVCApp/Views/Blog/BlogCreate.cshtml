<h2>Blog Create Page</h2>

<form action="/Blog/Save" method="post">
    <div class="mt-3">
        <label>Blog Title</label>
        <input class="form-control" name="BlogTitle">
    </div>  
    <div class="mt-3">
        <label>Blog Author</label>
        <input class="form-control" name="BlogAuthor">
    </div>  
    <div class="mt-3">
        <label>Blog Content</label>
        <input class="form-control" name="BlogContent">
    </div>
    <div class="mt-3">
        <a class="btn btn-secondary" href="/Blog">Back</a>
        <button class="btn btn-success" type="submit">Save</button>
    </div>
</form>